rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }
    
    match /questions/{questionId} {
      allow read, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /answers/{answerId} {
      allow read: if true;
      // Allow querying answers by questionId or by userId
      allow list: if isSignedIn() && (request.query.get('where.0.2') == 'questionId' || request.query.get('where.0.2') == 'userId');
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Allow anyone signed in to update votes, but not other fields
      allow update: if isSignedIn() && request.resource.data.keys().hasOnly(['upvotes', 'downvotes']);
      // Only the author can delete their own answer
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
